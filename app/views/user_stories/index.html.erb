<p id="notice"><%= notice %></p>

<h1>User Stories</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_stories.each do |user_story| %>
      <tr>
        <td><%= user_story.name %></td>
        <td><%= link_to 'Show', user_story %></td>
        <td><%= link_to 'Edit', edit_user_story_path(user_story) if policy(user_story).edit? %></td>
        <td><%= link_to 'Votar', newpoker_pokers_path(user_story) if policy(user_story).edit? %></td>
        <td><%= link_to 'Destroy', user_story, method: :delete, data: { confirm: 'Are you sure?' } if policy(user_story).destroy?%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<ul>
  <% if policy(UserStory.new).new?  %>
      <li><%= link_to 'New User Story', new_user_story_path if policy(UserStory.new).new? %></li>
  <% end %>
  <li><%= link_to 'Home', root_path %></li>
  <li><%= link_to 'Minhas votações', pokers_path %></li>
  <% if policy(Poker.new).showall? %>
      <li><%= link_to 'Mostrar todas as avaliações', showall_pokers_path  %></li>
  <% end %>
</ul>
