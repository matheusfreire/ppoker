<p id="notice"><%= notice %></p>

<h1>Minhas votações</h1>

<table>
  <thead>
    <th>Nota</th>
    <th>Quem votou</th>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pokers.each do |poker| %>
      <tr>
        <td><%= get_note(poker.note) %></td>
        <td><%= poker.user.name %></td>
        <td><%= link_to 'Destroy', poker, method: :delete, data: { confirm: 'Are you sure?' } if policy(poker).destroy?%></td>
      </tr>
    <% end %>
  </tbody>
</table>

